# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000
BASE_PATH=/admin

# Security
# Generate a new secret for production using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-very-secure-random-session-secret-here-change-this
ALLOWED_ORIGINS=https://www.mythiru.com
SESSION_MAX_AGE=300000 # Session timeout in milliseconds (e.g., 300000 for 5 minutes)

# Database
DB_PATH=./personal_website.db

# File Upload
MAX_FILE_SIZE=5242880 # 5MB
UPLOAD_DIR=./uploads

# Rate Limiting
LOGIN_RATE_LIMIT_WINDOW=900000 # 15 minutes in ms
LOGIN_RATE_LIMIT_MAX=5
GENERAL_RATE_LIMIT_WINDOW=900000 # 15 minutes in ms
GENERAL_RATE_LIMIT_MAX=100

# Email Configuration (for reminders)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM="My Dashboard" <noreply@example.com>